<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#212a49"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:id="@+id/r"
        android:layout_below="@+id/total"
        android:background="#212a49">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentLeft="true"
            android:text="NAME"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"
            android:id="@+id/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SHARE"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:id="@+id/share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="15dp"
            android:text="BUY/SELL"
            android:id="@+id/amount" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textColor="#ffffff"
        android:id="@+id/total"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/list"

        android:layout_marginTop="10dp"
        android:background="#cccccc"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/r"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Value :"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/total"
        android:layout_toLeftOf="@+id/total"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/invest"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount:"
        android:textColor="#ffffff"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/invest"
        android:layout_toLeftOf="@+id/invest"
        android:layout_toStartOf="@+id/invest"
        />




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/tp"
    android:layout_below="@+id/total"
    android:layout_marginTop="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tech Park"
        android:layout_marginLeft="5dp"
        android:textColor="#fff"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:textColor="#fff"
        android:text="1200"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_below="@+id/tp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UB"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:textColor="#fff"
            android:text="1200"/>

    </LinearLayout>

</RelativeLayout>
